{
  "name": "github-reviewer",
  "version": "1.0.0",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write 'src/**/*.ts'",
    "review-pr": "ts-node src/index.ts review-pr",
    "generate-tests": "ts-node src/index.ts generate-tests",
    "server": "ts-node src/index.ts server",
    "server:prod": "node dist/index.js server"
  },
  "keywords": [
    "github",
    "code-review",
    "ai",
    "claude"
  ],
  "author": "",
  "license": "ISC",
  "description": "AI-powered GitHub code reviewer using Claude",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.39.0",
    "@octokit/rest": "^21.1.1",
    "dotenv": "^16.4.7",
    "express": "^4.18.3"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@octokit/core": "^6.1.4",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.14",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "babel-jest": "^29.7.0",
    "eslint": "^9.23.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.5",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "ts-jest": "^29.3.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2"
  }
}
